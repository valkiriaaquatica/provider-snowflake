{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)"
  ],
  "commitMessageAction": "update",

  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "Makefile"
      ],
      "matchStrings": [
        "export TERRAFORM_PROVIDER_VERSION \\?= (?<currentValue>\\d+\\.\\d+\\.\\d+)",
        "export TERRAFORM_NATIVE_PROVIDER_BINARY \\?= terraform-provider-snowflake_v(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "snowflakedb/terraform-provider-snowflake",
      "versioningTemplate": "semver"
    }
  ],

  "packageRules": [
    {
      "matchPackageNames": [
        "snowflakedb/terraform-provider-snowflake"
      ],
      "branchTopic": "{{depName}}-{{newVersion}}",
      "recreateWhen": "auto",
      "schedule": [],
      "semanticCommitScope": "deps",
      "labels": [
        "provider",
        "snowflake"
      ]
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "automerge": false,
      "semanticCommitScope": "deps"
    },
    {
      "matchUpdateTypes": ["major"],
      "commitMessagePrefix": "{{semanticCommitType}}({{semanticCommitScope}}):"
    }
  ]
}
